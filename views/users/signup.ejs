<%layout("/layouts/boilerplate") -%>
<h1 class="col-6 offset-3">Sign Up on Wanderlust</h1>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username Required</div>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="passwors"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn add-btn"><b>SignUp</b></button>
    </form>
  </div>
</div>
